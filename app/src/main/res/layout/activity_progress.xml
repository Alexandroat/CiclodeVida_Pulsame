<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="es.tessier.carlos.misproyectos.Progress">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VENTANA DE PROGRESO 1"
        android:id="@+id/btnProgress1"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnProgress2"
        android:layout_alignStart="@+id/btnProgress2"
        android:onClick="OnClickProgress1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VENTANA DE PROGRESO 2"
        android:id="@+id/btnProgress2"
        android:layout_below="@+id/btnProgress1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:onClick="OnClickProgress2" />
</RelativeLayout>
